<!-- category.ejs -->

<%- include('header') -%>

<div class="container">
    <h2>Category</h2>
    <a href="/create-category" class="btn btn-sm btn-primary">Add Category</a>
    <hr>

    <div class="row">
        <% categories.forEach((item, key) => { %>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <!-- Display the image using the image_path -->
                    <img src="<%= item.image_path || '/path/to/default/image.jpg' %>" class="card-img-top" alt="<%= item.name %> Image">
                    <div class="card-body">
                        <p class="card-text"><%= item.name %></p>
                        <!-- Display the price instead of status -->
                        <p class="card-text">Price: <%= item.price %> $</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a onclick="return confirm('Delete ?')" href="/delete-category/<%= item.id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                                <a href="/edit-category/<%= item.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('footer') -%>
