<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Art Gallery</title>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-inverse">
        <a class="navbar-brand" ></a>
        <ul class="nav navbar-nav">
            <li class="active">
                <a href="/customer">Art Gallery</a>
            </li>
            <li class="active">
                <a href="/cart">Cart</a>
            </li>
            <li>
                <a>Hi User</a>
            </li>
            <li>
                <a href="/logout">Logout</a>
            </li>
        </ul>
    </nav>

<div class="container">
    <h2>Your Cart</h2>

    <% if (cart.length > 0) { %>
        <% cart.forEach(item => { %>
            <div class="cart-item">
                <img src="<%= item.image_path || '/path/to/default/image.jpg' %>" alt="<%= item.name %> Image">
                <div>
                    <h4><%= item.name %></h4>
                    <p>Category ID: <%= item.id %></p>
                </div>
                <a href="/remove-from-cart/<%= item.id %>" class="btn btn-danger btn-sm">Remove from Cart</a>
                <a href="/buy/<%= item.id %>" class="btn btn-success btn-sm">Buy</a>
            </div>
        <% }); %>
    <% } else { %>
        <p class="empty-cart">Your cart is empty.</p>
    <% } %>
</div>

    

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>







